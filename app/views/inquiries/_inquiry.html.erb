<div id="<%= dom_id inquiry %>" class="inquiry-details">
  <div class="row g-3">
    <div class="col-md-6">
      <div class="mb-3">
        <label class="fw-bold text-secondary">Host Name</label>
        <div class="fs-5"><%= inquiry.host_first_name %> <%= inquiry.host_last_name %></div>
      </div>

      <div class="mb-3">
        <label class="fw-bold text-secondary">Contact Information</label>
        <div><i class="bi bi-envelope"></i> <%= inquiry.host_email %></div>
        <div><i class="bi bi-telephone"></i> <%= inquiry.host_phone_number %></div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3">
        <label class="fw-bold text-secondary">Event Details</label>
        <div class="fs-5"><%= inquiry.event_name %></div>
        <div><i class="bi bi-geo-alt"></i> <%= inquiry.event_location %></div>
        <div><i class="bi bi-calendar"></i> <%= inquiry.event_date.strftime('%B %d, %Y') %></div>
      </div>
    </div>
  </div>
</div>